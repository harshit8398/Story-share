<h1>Stories</h1>
<div class="row">
    {{#each stories}}
        <div class="col s12 m4">
            <div class="card story likes">
                {{#if ../user}}
                <div class="card-image">
                        {{{editIcon user.id ../user.id id}}}
                </div>
                {{/if}}
                <div class="card-content center-align">
                    <h5>{{truncate title 15}}</h5>
                    <p class="story-text">{{ stripTags (truncate body 100)}}</p>
                    <br>
                    <div class="chip">
                        <img src="{{user.image}}">
                        <a href="/stories/user/{{user.id}}">
                            {{user.firstName}} {{user.lastName}}
                        </a>
                    </div>
                </div>
                <div class="card-action center-align">
                    <a class="btn red" href="/stories/show/{{id}}">Read More</a>
                </div>
                    {{#if likes}}
                    <b style="margin-left:4px"><i class="fa fa-thumbs-up"></i> {{likes}} likes</b>
                    {{/if}}
            </div>
        </div>
    {{else}}
        <p>No stories found</p>
    {{/each}}
</div>